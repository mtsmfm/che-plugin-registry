apiVersion: v2
publisher: cdr
name: code-server
version: latest
type: Che Editor
displayName: code-server
title: Visual Studio Code - Web (code-server)
description: An open source distribution of Visual Studio Code as a cloud IDE
icon: /images/default.png
category: Editor
repository: 'https://github.com/cdr/code-server'
firstPublicationDate: '2020-11-03'
latestUpdateDate: '2021-09-24'
spec:
  endpoints:
    - name: code-server
      targetPort: 8080
      attributes:
        type: ide
        protocol: http
      public: true
  containers:
    - image: 'codercom/code-server:3.6.2'
      mountSources: true
      memoryLimit: 1024M
      volumes:
        - name: user-data
          mountPath: /home/coder/.local/share/code-server
      name: code-server
      ports:
        - exposedPort: 8080
  initContainers: []
